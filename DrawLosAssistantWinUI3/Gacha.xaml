<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DrawLosAssistantWinUI3.Gacha"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Image Source="ms-appx:///Assets/Background.jpg" Stretch="UniformToFill" />
            <RelativePanel Grid.Row="1">
                <TextBlock Text="抽签助手Gacha模式" FontSize="36" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="20" />
                <Button Name="StartGacha" Click="StartGacha_Click" Margin="20" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True">
                    <Button.Content>
                        <SymbolIcon Symbol="Play" />
                    </Button.Content>
                </Button>
            </RelativePanel>
        </Grid>
    </Grid>
</Page>