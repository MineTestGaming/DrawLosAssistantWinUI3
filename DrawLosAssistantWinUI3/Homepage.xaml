<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DrawLosAssistantWinUI3.Homepage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>
        <TextBlock x:Name="Result" RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignHorizontalCenterWithPanel="True" Text="研究生低效挑选器" FontSize="64" />
        <!--TextBlock x:Name="Level" RelativePanel.Below="Result" /-->
        <StackPanel RelativePanel.AlignRightWithPanel="True" Margin="20" RelativePanel.AlignBottomWithPanel="True" Orientation="Horizontal">
            <Button Content="以小窗方式运行" Name="CompactOverlayMode" Click="CompactOverlayMode_OnClick" Margin="0,0,5,0"/>
            <Button Content="开始抽签" Name="Start" Click="Start_Click" Margin="5,0,0,0"/>
        </StackPanel>
    </RelativePanel>
</Page>